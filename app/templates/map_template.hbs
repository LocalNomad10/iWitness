<div id="map-widget">
  <div id="map"></div>
  <div class="map-zoom-control" {{bindAttr class="zoomClass"}}>
    <div class="handle"></div>
    <a class="zoom out" {{action "zoomOut"}}></a>
    <a class="zoom in"  {{action "zoomIn"}}></a>
    <div class="slider">
      <div class="slider-widget"></div>
    </div>
    <div class="progress"></div>
  </div>
</div>

<div id="address-field" {{bindAttr class="mapSearchStatus"}}>
  <label for="address">
    Find Location
    {{view addressField id="address"}}
  </label>
  <div class="radar"></div>
</div>
