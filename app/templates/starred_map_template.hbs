<h1 id="starred-items-count">{{numberOfItems}}</h2>
<h3 id="flagged-items-count">{{numberFlaggedForExport}}</h3>

<div class="button" {{action "showExportText"}}>Copy as text</div>
{{#view exportLink}}Email{{/view}}

<div id="export-popover">
  <div class="export-heading" {{action "hideExportText"}}>Copy as text</div>
  <div id="rendered-text-results" class="export-content linenums">
  {{#if IWitness.starredSetController.content.length}}
    {{#each IWitness.starredSetController.content}}
      {{view IWitness.TextResultView modelBinding="this"}}
    {{/each}}
  {{/if}}
  </div>
</div>

<div id="map-widget">
  <div id="starred-map"></div>
</div>

