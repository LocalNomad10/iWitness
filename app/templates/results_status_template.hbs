<div id="results-fold"></div>
<div id="results-top-bar" class="toolbar">
  <div {{bindAttr class="statusClass"}}>
    {{status}}
    <div class="radar"></div>

    <div id="services-menu">
      <div class="services-header">
        {{status}} <div class="services-status-icon"></div>
      </div>

      {{view IWitness.ServiceStatusView class="first" serviceType="twitter"}}
      {{view IWitness.ServiceStatusView class="last" serviceType="flickr"}}
    </div>
  </div>

  <div id="show_starred_button" class="nav-button with-icon star-icon" {{action showStarred}}>
    Show starred items
  </div>
</div>
