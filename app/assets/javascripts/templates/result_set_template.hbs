<table class="table table-bordered table-striped" id="result_set">
  {{#each IWitness.resultSetController.content}}
    <tr>
      <td class="pic">
        <img {{bindAttr src="profileImageUrl"}}>
      </td>
      <td>
        <a target="_blank" {{bindAttr href="fromUserUrl"}}>
            <strong>{{fromUserName}}</strong>
            @{{fromUser}}
        </a>
        <em>{{timestamp}}</em>
        <p>{{linkify text}}</p>
        <a class="permalink" target="_blank" {{bindAttr href="permalinkUrl"}}>twitter</a>
      </td>
    </tr>
  {{/each}}

  {{#unless IWitness.resultSetController.content.length}}
    <tr>
      {{#if IWitness.searchController.searching}}
        <td class="message">Searching...</td>
      {{else}}
        <td class="message">No Results</td>
      {{/if}}
    </tr>
  {{/unless}}
</table>
