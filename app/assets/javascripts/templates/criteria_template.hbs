<div id="criteria">
  <div class="field">
    <label for="keyword">Keyword</label>
    {{view Ember.TextField id="keyword" valueBinding="keyword"}}
  </div>

  <div class="field">
    <label for="start_date">Start Date</label>
    {{view Ember.TextField id="start_date" valueBinding="start_date" class="date"}}
    {{view Ember.TextField id="start_time" valueBinding="start_time" class="time"}}
  </div>

  <div class="field">
    <label for="end_date">End Date</label>
    {{view Ember.TextField id="end_date" valueBinding="end_date" class="date"}}
    {{view Ember.TextField id="end_time" valueBinding="end_time" class="time"}}
  </div>

  <div id="map"></div>

  <div class="field">
    <label for="radius">Radius (in km)</label>
    {{view Ember.TextField type="number" id="radius" valueBinding="radius" class="span1"}}
  </div>

  <input type="submit" value="Search" {{action search}}>
</div>
