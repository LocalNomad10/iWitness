<div id="criteria">
  <div class="field">
    <label for="keyword">Keyword</label>
    {{view Ember.TextField id="keyword" valueBinding="model.keyword"}}
  </div>

  <div class="field">
    <label for="start_date">Start Date</label>
    {{view Ember.TextField id="start_date" valueBinding="model.startDateString" class="date"}}
    {{view Ember.TextField id="start_time" valueBinding="model.startTimeString" class="time"}}
  </div>

  <div class="field">
    <label for="end_date">End Date</label>
    {{view Ember.TextField id="end_date" valueBinding="model.endDateString" class="date"}}
    {{view Ember.TextField id="end_time" valueBinding="model.endTimeString" class="time"}}
  </div>

  <div class="field">
    <label class="radio">
      {{view timezoneSelector timezone="mine"}}
      Search using my time zone
    </label>
    <label class="radio">
      {{view timezoneSelector timezone="map"}}
      Search using map's time zone
    </label>
  </div>

  <hr>

  {{view IWitness.MapView}}

  <input type="submit" value="Search" {{action search}}>
</div>
